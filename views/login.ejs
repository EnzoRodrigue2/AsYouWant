<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <main class="main-login">
        <div class="loginLeft">
            <picture class="loginLogo">
                <img src="/Images/Logo1.svg" class="loginLogo">
            </picture>
        </div>
        <div class="loginRight">
            <h1 class="loginTitle">
                Ingresa para seguir aprendiendo
            </h1>
            <% if (locals.errors) { 
                errors.forEach(error => { %>
                <p class="register_errores"><%= error.msg %></p>
            <% });
            } %>
            <form method="POST" action="/usuario/login" class="login_form">
                <div class="campoLogin">
                    <label for="nombre" class="loginLabel">Nombre</label>
                    <input type="text" class="imputLogin" name="nombre" value="<%= locals.old && old.nombre ? old.nombre :'' %>" placeholder="Ej:Juan" >
                </div>
                <div class="campoLogin">
                    <label for="nombre" class="loginLabel">Apellido</label>
                    <input type="text" class="imputLogin" value="<%= locals.old && old.apellido ? old.apellido :'' %>" name="apellido" placeholder="Ej:Perez" >
                </div>
                <div class="campoLogin">
                    <label for="nombre" class="loginLabel">Email</label>
                    <input type="email" class="imputLogin" name="email" value="<%= locals.old && old.email ? old.email :'' %>" placeholder="nombre@ejemplo.com" >
                </div>
                <div class="campoLogin">
                    <label for="nombre" class="loginLabel">Contraseña</label>
                    <input type="password" class="imputLogin" placeholder="Contraseña" >
                </div>
                <div class="loginButton">
                    <input type="submit" value="Ingresar" class="loginBTN">
                </div>
            </form>
        </div>
    </main>
</body>